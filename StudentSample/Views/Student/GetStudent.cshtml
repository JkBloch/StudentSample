@{

    ViewData["Title"] = "Student Detail " + Model.Name;

}
@model StudentModel

<div class="container">
    <h3 class="h3">Student Profile</h3>
    <div class="row">      
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <img src="@Model.Image" class="d-block" width="150" height="150" alt="@Model.Image">
                    </div>
            </div>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class="fw-bold">Name - </span> @Model.Name</li>
                <li class="list-group-item"><span class="fw-bold">Class - </span> @Model.ClassName</li>
                <li class="list-group-item"><span class="fw-bold">RollNo - </span> @Model.RollNo</li>                
                <li class="list-group-item"><span class="fw-bold">Age - </span> @Model.Age</li>            

            </ul>
        </div>
    </div>
</div>