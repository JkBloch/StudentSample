@{

    ViewData["Title"] = "Teacher Detail " + Model.Name;

}
@model TeacherModel
<div class="container">
    <h3 class="h3">Teacher Profile</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <img src="@Model.Image" class="d-block" width="150" height="150" alt="@Model.Image">
                </div>
            </div>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class="fw-bold">Name - </span> @Model.Name</li>
                <li class="list-group-item"><span class="fw-bold">Sex - </span> @Model.Sex</li>                
                <li class="list-group-item"><span class="fw-bold">Age - </span> @Model.Age</li>
            </ul>
        </div>
    </div>   
</div>