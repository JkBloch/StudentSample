@{
    ViewData["Title"] = "Teacher Detail " + Model.TeacherName;
}
@model TeacherSubjectMappingModel
<div class="container">
    <h3 class="h3">Teacher Subject Class and Language Mapping</h3>
    <div class="row">
        <div class="col-md-6">
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><span class="fw-bold">Teacher - </span> @Model.TeacherName</li>
                <li class="list-group-item"><span class="fw-bold">Class - </span> @Model.StudentClassName</li>
                <li class="list-group-item"><span class="fw-bold">Subject - </span> @Model.SubjectName</li>
                <li class="list-group-item"><span class="fw-bold">Language - </span> @Model.LanguageName</li>
            </ul>
        </div>
    </div>
</div>